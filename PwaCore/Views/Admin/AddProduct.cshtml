@model Products

<div class="container">
    <div style="margin-top:100px" class="container-fluid">
        <form asp-controller="AddProduct" asp-action="index" method="post" enctype="multipart/form-data">
            <div class="form-row addpro">
                <div class="col-md-6">
                    <input asp-for="Name" type="text" class="form-control" placeholder="نام محصول">
                </div>
                <div class="col-md-6">
                    <input asp-for="Price" type="number" class="form-control" placeholder="قیمت">
                </div>
            </div>
            <div class="form-row addpro">
                <div class="col-md-6">
                    <div class="btn btn-success file-btn">
                        <p class="file-lable">انتخاب عکس اصلی</p>
                        <input name="mainImg" id="choose-file" type="file" class=" file-input">
                    </div>
                </div>

                <div class="col-md-6 ">
                    <div class="btn btn-success file-btn">
                        <p class="file-lable">انتخاب عکس‌های بیشتر </p>
                        <input name="images" id="gallery-photo-add" multiple type="file" class=" file-input">
                    </div>
                </div>
            </div>
            <div class="form-row addpro">
                <div id="img-preview" class="col-md-6">
                </div>
                <div id="gallery" class="col-md-6">
                </div>
            </div>
            <div class="mb-5">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio"  name="gender" id="inlineRadio1" checked value="Man">
                    <label class="form-check-label" for="inlineRadio1">مردانه</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio"  name="gender" id="inlineRadio2" value="Woman">
                    <label class="form-check-label" for="inlineRadio2">زنانه</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio"  name="gender" id="inlineRadio3" value="Children" >
                    <label class="form-check-label" for="inlineRadio3">بچه‌گانه</label>
                </div>
            </div>
            
            <div class="d-flex justify-content-center mt-5 mb-5">
                <div class="col-12">
                    <input class="btn btn-secondary  " type="submit" value="انجام" />
                    <a href="/" class="btn btn-danger btn-block">بازگشت</a>
                </div>
            </div>


        </form>
    </div>
</div>



<script>
        const chooseFile = document.getElementById("choose-file");
    console.log(chooseFile);
    const imgPreview = document.getElementById("img-preview");
    chooseFile.addEventListener("change", function () {

        getImgData();
    });

    function getImgData() {

        const files = chooseFile.files[0];
        if (files) {

            const fileReader = new FileReader();
            fileReader.readAsDataURL(files);
            fileReader.addEventListener("load", function () {
                imgPreview.style.display = "block";
                imgPreview.innerHTML = '<img class="selectedimg" src="' + this.result + '" />';
            });
        }
    }

</script>


