@model Cart

<link rel="stylesheet" href="/css/Cart.css" />
@if (Model == null)
{
    <div class="container-fluid my-cart ">
        <div class="row">
            <div class="col-12">
                <div class="mt-5">
                    <div class="jumbotron alert-warning text-center">
                        <h1 class="display-4 pt-5 ">سبد خرید شما خالی است</h1>

                        <hr class="mt-5 mb-5">
                        <p class="lead">
                            <a class="btn btn-outline-primary btn-lg" href="/home/shop" role="button">بازگشت به فروشگاه</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{

    <div class=" my-cart ">
        <div class="row">
            <div class="col-lg-8 col-md-12 col-sm-12 col-xl-8 align-self-start">
                <div class=" cart">
                    @foreach (var item in Model.CartDetails)
                    {
                        <div class="row mt-3  ">
                            <div class="col-2 col-xs-4">
                                <img class="img" src="/img/@item.Product.MainImg"/>
                            </div>
                            <div class="col-10 col-xs-8">

                                <div>
                                    <p class="mt-5 text-bold ">@item.Product.Name</p>
                                </div>
                                <div>
                                    <p>تعداد @item.Quantity </p>
                                </div>
                                <div>
                                    <p>قیمت @item.Price.ToString("##,###") تومان </p>
                                </div>
                            </div>

                        </div>
                        <div ><hr/></div>
                    }
                </div>

            </div>

            <div style=" background-color: #ffffff; margin-top: 15px; height: 320px;  " class="col-lg-4 col-md-12 col-sm-12 col-xl-4  ">
                <div class="Summary ">
                    <div  class=" box-head ">
                        <h5 class="text-center mt-4 "><b>فاکتور خرید</b></h5>
                    </div>

                    <hr />
                    <div class="d-flex text-center ">
                        <div class="col"> تعداد </div>
                        <div class="col ">@Model.TotalQuantity </div>
                    </div>
                    
                    <div class="d-flex text-center " style="border-top: 1px solid rgba(0,0,0,.1); padding: 2vh 0;">
                        <div class="col">جمع کل</div>
                        <div class="col text-right">@Model.TotalPrice.ToString("##,###") تومان</div>
                    </div>
                    <hr/>
                    <div style="margin-top: 70px" class="  pbot text-center ">
                        <a href="/home/payment" class="btn btn-outline-success ">انتقال به درگاه خرید</a>
                    </div>

                </div>



            </div>
        </div>

    </div>


}

